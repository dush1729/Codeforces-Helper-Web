<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Codeforces Helper</title>
    <script src="js/contests.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
        integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
        crossorigin="anonymous"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootswatch/4.4.1/cyborg/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-l7xaoY0cJM4h9xh1RfazbgJVUZvdtyLWPueWNtLAphf/UbBgOVzqbOTogxPwYLHM" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-144934197-3"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'UA-144934197-3');
    </script>

</head>

<body>
    <div class="container">
        <%- include('partials/header') %>

        <div class="card">
            <div class="row">
                <div class="col">
                    <input class="form-control input-lg" type="text" id="contestInput" onkeyup="searchContests()"
                        placeholder="Type here to search contest..">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <button onclick="filterContests('', 0)" type="button" class="btn btn-outline-warning">All</button>
                    <button onclick="filterContests('Div. 1 + Div. 2', 0)" type="button"
                        class="btn btn-outline-primary">Div. 1 + Div. 2</button>
                    <button onclick="filterContests('(Div. 2', 0)" type="button" class="btn btn-outline-info">Div.
                        2</button>
                    <button onclick="filterContests('Div. 3', 0)" type="button" class="btn btn-outline-success">Div.
                        3</button>
                    <button onclick="filterContests('Educational', 0)" type="button"
                        class="btn btn-outline-danger">Educational Round</button>
                </div>
            </div>


            <div class="row">
                <div class="col">
                    <form action="/contests" method="POST">
                        <div class="form-group">
                            <label>Your handle</label>
                            <input class="form-control input" type="text" name="handle" id="handleInput"
                                placeholder="Please enter your handle" <% if(typeof
                                handle !='undefined' ) { %>
                            value="<%= handle %>" <% } %>>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <input class="form-control input-lg" type="text" id="participationTypeInput" onkeyup="searchContests()"
                        placeholder="Participation type filter">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <button onclick="filterContests('', 1)" type="button" class="btn btn-outline-warning">All</button>
                    <button onclick="filterContests('Contestant', 1)" type="button" class="btn btn-outline-primary">Contestant</button>
                    <button onclick="filterContests('Out of competition', 1)" type="button" class="btn btn-outline-info">Out of competition</button>
                    <button onclick="filterContests('Virtual', 1)" type="button" class="btn btn-outline-success">Virtual</button>
                    <button onclick="filterContests('Practice', 1)" type="button"class="btn btn-outline-danger">Practice</button>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <table id="contestsTable" class="table table-active table-hover">
                    <tr>
                        <th>Contests</th>
                        <th>Type</th>
                    </tr>
                    <% for (var i = 0; i < contests.length;  i++) { %>
                        <tr>
                            <td><a href="https://codeforces.com/contest/<%= contests[i].id %>"><%= contests[i].name %></a></td>
                            <td><%= contests[i].participantType %></td>
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>

</body>

</html>